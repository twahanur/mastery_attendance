              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"minLength\": 5,\n  \"maxLength\": 20,\n  \"allowSpecial\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/security-settings/username-rules",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "security-settings", "username-rules"]
            },
            "description": "Update username validation rules"
          },
          "response": []
