      ]
    },
    {
      "name": "üß™ Rate Limit Testing",
      "item": [
        {
          "name": "Health Check (Rate Limit Test)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Use this endpoint to test rate limiting. Set strict limits (e.g., 5 requests per 1 minute) and run this multiple times to trigger rate limit."
          },
          "response": []
        }
      ],
      "description": "Set strict rate limits using 'Strict Rate Limiting' endpoint, then run this health check multiple times quickly to test rate limiting."
    }
  ]
}
