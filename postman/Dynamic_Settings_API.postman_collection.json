              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"minLength\": 3,\n  \"maxLength\": 30,\n  \"allowSpecial\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/security-settings/username-rules",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "security-settings", "username-rules"]
            },
            "description": "Restore default username rules"
          },
          "response": []
        }
      ]
    },
    {
      "name": "üß™ Testing Dynamic Validation",
      "item": [
        {
          "name": "Test - Create Employee (Valid Password)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test.employee@company.com\",\n  \"username\": \"testuser\",\n  \"password\": \"SecurePass@123\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"Employee\",\n  \"employeeId\": \"TEST001\",\n  \"section\": \"Testing\",\n  \"department\": \"IT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/employees",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "employees"]
            },
            "description": "Create employee with valid password (meets current rules)"
          },
          "response": []
        },
        {
          "name": "Test - Create Employee (Weak Password)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"weak.password@company.com\",\n  \"username\": \"weakpass\",\n  \"password\": \"simple\",\n  \"firstName\": \"Weak\",\n  \"lastName\": \"Password\",\n  \"employeeId\": \"WEAK001\",\n  \"section\": \"Testing\",\n  \"department\": \"IT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/employees",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "employees"]
            },
            "description": "Try to create employee with weak password (should fail based on current rules)"
          },
          "response": []
        },
        {
          "name": "Test - Password Reset (Valid)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"your-reset-token-here\",\n  \"newPassword\": \"NewSecure@Pass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/reset-password",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "reset-password"]
            },
            "description": "Test password reset with valid password"
          },
          "response": []
        },
        {
          "name": "Test - Password Reset (Invalid)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"your-reset-token-here\",\n  \"newPassword\": \"weak\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/reset-password",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "reset-password"]
            },
            "description": "Test password reset with invalid password (should fail)"
          },
          "response": []
        },
        {
          "name": "Test - Change Password (Valid)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{employeeToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"Password@123\",\n  \"newPassword\": \"NewSecure@Pass456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/change-password",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "change-password"]
            },
            "description": "Change password with valid new password"
          },
          "response": []
        }
      ]
    },
    {
      "name": "üìä All Admin Settings",
      "item": [
        {
          "name": "Get All Settings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/settings",
              "host": ["{{baseUrl}}"],
              "path": ["settings"]
            },
            "description": "Get all admin settings including rate limiter and password validation settings"
          },
          "response": []
        },
        {
          "name": "Get Security Settings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/settings?category=security",
              "host": ["{{baseUrl}}"],
              "path": ["settings"],
              "query": [
                {
                  "key": "category",
