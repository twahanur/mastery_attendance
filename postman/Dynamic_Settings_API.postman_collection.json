{
  "info": {
    "name": "Dynamic Settings API - Rate Limiter & Password Validation",
    "description": "Postman collection for testing dynamic admin settings including rate limiting configuration and password validation rules",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{adminToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api/v1",
      "type": "string",
      "description": "Local development URL"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string",
      "description": "Admin JWT token"
    },
    {
      "key": "employeeToken",
      "value": "",
      "type": "string",
      "description": "Employee JWT token"
    }
  ],
  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('adminToken', jsonData.data.token);",
                  "    pm.environment.set('adminToken', jsonData.data.token);",
                  "    console.log('Admin token saved:', jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@company.com\",\n  \"password\": \"Password@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/admin/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "admin", "login"]
            },
            "description": "Login as admin to get JWT token for protected routes"
          },
          "response": []
        },
        {
          "name": "Employee Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('employeeToken', jsonData.data.token);",
                  "    pm.environment.set('employeeToken', jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user1@company.com\",\n  \"password\": \"Password@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/employee/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "employee", "login"]
            },
            "description": "Login as employee"
          },
          "response": []
        }
      ]
    },
    {
      "name": "‚ö° Rate Limiter Settings",
      "item": [
        {
          "name": "Get Rate Limit Config",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/security-settings/rate-limit",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "security-settings", "rate-limit"]
            },
            "description": "Get current rate limiting configuration from database"
          },
          "response": []
        },
        {
          "name": "Update Rate Limit Config",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"enabled\": true,\n  \"maxRequests\": 5000,\n  \"windowMinutes\": 10\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/security-settings/rate-limit",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "security-settings", "rate-limit"]
            },
            "description": "Update rate limiting configuration. Changes take effect within 1 minute (cache duration)."
          },
          "response": []
        },
        {
          "name": "Disable Rate Limiting",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"enabled\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/security-settings/rate-limit",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "security-settings", "rate-limit"]
            },
            "description": "Disable rate limiting entirely"
          },
          "response": []
        },
        {
          "name": "Strict Rate Limiting (100 req/5min)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"enabled\": true,\n  \"maxRequests\": 100,\n  \"windowMinutes\": 5\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/security-settings/rate-limit",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "security-settings", "rate-limit"]
            },
            "description": "Set strict rate limiting for testing"
          },
          "response": []
        },
        {
          "name": "Restore Default Rate Limiting",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"enabled\": true,\n  \"maxRequests\": 10000,\n  \"windowMinutes\": 15\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/security-settings/rate-limit",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "security-settings", "rate-limit"]
            },
            "description": "Restore default rate limiting settings (10000 requests per 15 minutes)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "üîí Password Validation Settings",
      "item": [
        {
          "name": "Get Password Validation Rules",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/security-settings/password-rules",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "security-settings", "password-rules"]
            },
            "description": "Get current password validation rules from database"
          },
          "response": []
        },
        {
          "name": "Update Password Rules",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"minLength\": 10,\n  \"requireUppercase\": true,\n  \"requireLowercase\": true,\n  \"requireNumber\": true,\n  \"requireSpecial\": true,\n  \"specialCharacters\": \"!@#$%^&*()_+-=[]{}|;:,.<>?\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/security-settings/password-rules",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "security-settings", "password-rules"]
            },
            "description": "Update password validation rules. Changes take effect within 1 minute."
          },
          "response": []
        },
        {
          "name": "Simple Password Rules (Testing)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"minLength\": 6,\n  \"requireUppercase\": false,\n  \"requireLowercase\": false,\n  \"requireNumber\": false,\n  \"requireSpecial\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/security-settings/password-rules",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "security-settings", "password-rules"]
            },
            "description": "Set simple password rules (only length requirement) for testing"
          },
          "response": []
        },
        {
          "name": "Strict Password Rules",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"minLength\": 12,\n  \"requireUppercase\": true,\n  \"requireLowercase\": true,\n  \"requireNumber\": true,\n  \"requireSpecial\": true,\n  \"specialCharacters\": \"!@#$%^&*()_+-=[]{}|;:,.<>?\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/security-settings/password-rules",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "security-settings", "password-rules"]
            },
            "description": "Set strict password requirements (12+ chars, all character types)"
          },
          "response": []
        },
        {
          "name": "Restore Default Password Rules",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"minLength\": 8,\n  \"requireUppercase\": true,\n  \"requireLowercase\": true,\n  \"requireNumber\": true,\n  \"requireSpecial\": true,\n  \"specialCharacters\": \"!@#$%^&*()_+-=[]{}|;:,.<>?\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/security-settings/password-rules",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "security-settings", "password-rules"]
            },
            "description": "Restore default password validation rules"
          },
          "response": []
        }
      ]
    },
    {
      "name": "üë§ Username Validation Settings",
      "item": [
        {
          "name": "Get Username Validation Rules",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/security-settings/username-rules",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "security-settings", "username-rules"]
            },
            "description": "Get current username validation rules"
          },
          "response": []
        },
        {
          "name": "Update Username Rules",
